<Window x:Class="yTodo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yTodo"
        xmlns:helpers="clr-namespace:yTodo.Helpers"
        xmlns:vm="clr-namespace:yTodo.ViewModels"
        mc:Ignorable="d"
        Title="{Binding AppTitle}" Height="800" Width="450"
        Background="{Binding SelectedBackgroundColor, Converter={StaticResource ColorConverter}}"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        FlowDirection="{Binding FlowDirection}"
        PreviewMouseDown="Window_PreviewMouseDown">
    
    <Window.Resources>
        <!-- Converters moved to App.xaml -->

        <DataTemplate x:Key="EntryTemplate" DataType="{x:Type vm:EntryViewModel}">
            <Border Background="Transparent" x:Name="ItemBorder" CornerRadius="0">
                <Border.Padding>
                    <MultiBinding Converter="{StaticResource ThicknessConverter}">
                        <Binding Source="20" />
                        <Binding Path="DataContext.SelectedLineSpacing" RelativeSource="{RelativeSource AncestorType=ListBox}" />
                    </MultiBinding>
                </Border.Padding>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" IsChecked="{Binding IsDone}" VerticalAlignment="Top" Margin="0,4,15,0">
                        <CheckBox.Visibility>
                            <Binding Path="IsTask">
                                <Binding.Converter>
                                    <BooleanToVisibilityConverter />
                                </Binding.Converter>
                            </Binding>
                        </CheckBox.Visibility>
                    </CheckBox>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBox Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 Foreground="{Binding Color, Converter={StaticResource ColorConverter}}"
                                 BorderThickness="0"
                                 CaretBrush="White"
                                 FontSize="{Binding DisplayFontSize}"
                                 FontFamily="{Binding FontFamily}"
                                 FontWeight="{Binding IsHeader, Converter={StaticResource HeaderWeightConverter}}"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Top"
                                 PreviewKeyDown="OnTextBoxKeyDown"
                                 PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"
                                 DataObject.Pasting="OnTextBoxPasting"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Command="Cut" Header="Cut"/>
                                    <MenuItem Command="Copy" Header="Copy"/>
                                    <MenuItem Command="Paste" Header="Paste"/>
                                    <Separator />
                                    <MenuItem Header="Toggle Check" Click="OnToggleCheckClicked"/>
                                    <MenuItem Header="Delete" Click="OnDeleteClicked"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                        
                        <TextBlock Margin="0,5,0,0">
                            <TextBlock.Visibility>
                                <Binding Path="HasLink">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Visibility>
                            <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="OnRequestNavigate">
                                <Run Text="{Binding DisplayTitle}" FontSize="12" Foreground="#88FFFFFF"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="✕" Click="OnDeleteClicked" 
                                Background="Transparent" Foreground="#22FFFFFF" BorderThickness="0"
                                Width="24" Height="24" Cursor="Hand"
                                Visibility="Hidden" x:Name="DeleteBtn" Style="{StaticResource FlatButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="#08FFFFFF" />
                </Trigger>
                <DataTrigger Binding="{Binding IsDone}" Value="True">
                    <Setter TargetName="DeleteBtn" Property="Visibility" Value="Visible" />
                    <Setter TargetName="DeleteBtn" Property="Foreground" Value="#88FFFFFF" />
                </DataTrigger>
                
                <!-- Placeholder Styling -->
                <DataTrigger Binding="{Binding IsPlaceholder}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Opacity" Value="0.5" />
                    <Setter TargetName="DeleteBtn" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                
                <!-- Header Specific Styling -->
                <DataTrigger Binding="{Binding IsHeader}" Value="True">
                    <Setter TargetName="DeleteBtn" Property="Visibility" Value="Collapsed" />
                    
                    <Setter TargetName="ItemBorder" Property="Margin" Value="0,15,0,5" />
                    <Setter TargetName="ItemBorder" Property="BorderThickness" Value="0,0,0,1" />
                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#11FFFFFF" />
                    <Setter TargetName="ItemBorder" Property="Padding" Value="20,5,20,10" />
                </DataTrigger>

                <!-- Highlight when focused -->
                <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="#0AFFFFFF" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Padding="25,20,25,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" IsHitTestVisible="False">
                    <TextBlock Text="{Binding AppTitle}" FontSize="14" Opacity="0.4" FontWeight="Bold"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" Opacity="0.3" Margin="10,2,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="➕" Click="OnAddClicked" Margin="0,0,12,0"
                            Style="{StaticResource FlatButton}" Foreground="White" FontSize="14"/>
                    <Button Content="⚙" Click="OnSettingsClicked"
                            Style="{StaticResource FlatButton}" Foreground="White" FontSize="18"/>
                </StackPanel>
            </Grid>
        </Border>

        <ListBox Grid.Row="1" x:Name="ListControl" ItemsSource="{Binding Entries}" ItemTemplate="{StaticResource EntryTemplate}" 
                 Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Focusable" Value="True"/> <!-- Enabled focus for highlight -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
